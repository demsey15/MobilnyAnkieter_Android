<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/xs_black"
    android:id="@+id/survey_templates_animator">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/oliwkowy"
        tools:context="bohonos.demski.mieldzioc.mobilnyankieter.surveytemplates.SurveyTemplateActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_surveys_template_button"
            android:text="Eksportuj szablony"
            android:background="@color/oliwkowy"
            android:drawableLeft="@drawable/send"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/load_survey_templates_button"
                android:text="Wczytaj szablony"
                android:background="@color/oliwkowy"
                android:drawableLeft="@drawable/downloads"
                android:layout_marginBottom="30dp"
                android:textColor="@color/black"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_survey_templates_button"
                android:text="Usuń szablony"
                android:drawableLeft="@drawable/delete"
                android:background="@color/oliwkowy"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/loading_templates_progress"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading_templates_progress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Trwa wczytywanie szablonów ankiet..."
            android:textAlignment="center"
            android:id="@+id/text_loading_templates_progress"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_loading_templates_progress"
            android:layout_centerHorizontal="true"
            android:text="Trwa wczytywanie szablonów ankiet..."
            android:textAlignment="center"
            android:id="@+id/text_2_loading_templates_progress"
            android:textSize="15dp"/>
    </RelativeLayout>
</ViewAnimator>
