<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xs_black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min_length_txt"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:text="@string/min_length_constraint"
        android:textSize="22dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:id="@+id/min_length_edit"
        android:inputType="number"
        android:layout_toRightOf="@+id/min_length_txt"
        android:layout_marginLeft="20dp"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:id="@+id/max_length_txt"
        android:text="@string/max_length_constraint"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/min_length_txt"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:id="@+id/max_length_edit"
        android:inputType="number"
        android:layout_below="@id/min_length_edit"
        android:layout_toRightOf="@+id/max_length_txt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regex_txt"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:text="@string/regex_constraint"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/max_length_txt"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regex_edit"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_text_color"
        android:layout_below="@id/regex_txt"
        />
</RelativeLayout>
