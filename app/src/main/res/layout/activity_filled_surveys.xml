<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/oliwkowy"
    tools:context="bohonos.demski.mieldzioc.mobilnyankieter.filledsurveys.FilledSurveysActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_filled_surveys_button"
            android:text="Eksportuj wyniki ankiet"
            android:background="@color/oliwkowy"
            android:drawableLeft="@drawable/send"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_survey_templates_button"
            android:text="Statystyki zbierania ankiet"
            android:background="@color/oliwkowy"
            android:drawableLeft="@drawable/statistics"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_survey_answers_button"
            android:text="UsuÅ„ wyniki ankiet"
            android:drawableLeft="@drawable/delete"
            android:background="@color/oliwkowy"
            android:textColor="@color/black"
            />
    </LinearLayout>
</RelativeLayout>
