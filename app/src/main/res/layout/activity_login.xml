<ViewAnimator
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/xs_black"
    android:id="@+id/login_animator">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/login_progress"
        />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/login_progress"
          android:layout_centerHorizontal="true"
          android:text="Logowanie..."
          android:id="@+id/text_progress"
          android:textSize="15dp"/>
  </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView android:text="@string/login_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/hello_log"
        android:textColor="@color/login_color_text"
        />
    <TextView android:text="@string/logging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/hello_log"
        android:textColor="@color/login_color_text"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:id="@+id/linear_login">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_password"
        android:hint="@string/password_hint"
        android:textColorHint="@color/login_color_hint"
        android:textColor="@color/login_color_hint"
       />
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/linear_login"
        android:layout_centerHorizontal="true"
        android:text="@string/button_login"
        android:id="@+id/login_button"
        android:background="@color/button_color"/>

</RelativeLayout>
</ViewAnimator>